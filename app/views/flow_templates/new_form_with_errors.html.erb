<!-- Validation failure messages -->
<% if @flow.present? %>
  <% if @flow.errors.any? %>
    <% @flow.errors.full_messages.each do |message| %>
      <div class="alert alert-danger">
        <%= message %>
      </div>
    <% end %>
  <% end %>
<% end %>

<h1>
  Add a new flow
</h1>


<hr>

<form action="/create_flow" method="post" class="form-horizontal" enctype="multipart/form-data">>

  <div class="form-group">
    <label for="campaign_id">
      Campaign
    </label>
    
    <% if current_user.company_id == 1 %>
    <%= select_tag("campaign_id", options_from_collection_for_select(Campaign.all, :id, :campaign_title, @flow.try(:campaign_id)), :class => "form-control") %>
    <% else %>
    <%= select_tag("campaign_id", options_from_collection_for_select(Campaign.where(:company_id => current_user.id), :id, :campaign_title, @campaign.try(:campaign_id)), :class => "form-control") %>    
    <% end %>
    or <a href="/campaigns/new">add a new campaign</a> first
  </div>


  <div class="form-group">
    <label for="flow_version">
      Flow version
    </label>

    <input type="text" id="flow_version" name="flow_version" class="form-control" value="<%= @flow.flow_version %>">
  </div>

  <div class="form-group">
    <label for="flow_image">
      Flow image
    </label>

    <input type="file" id="flow_image" name="flow_image" class="form-control" value="<%= @flow.flow_image %>">
  </div>

  <div class="form-group">
    <input type="hidden" id="creator_id" name="creator_id" class="form-control" value="<%= current_user.id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Create flow
  </button>
</form>

<hr>

<a href="/flows">
  Go back
</a>
