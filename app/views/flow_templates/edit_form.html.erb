<h1>
  Edit flow #<%= @flow.id %>
</h1>

<hr>

<form action="/update_flow/<%= @flow.id %>" method="post" class="form-horizontal" enctype="multipart/form-data">>

  <div class="form-group">
    <label for="campaign_id">
      Campaign
    </label>

    <input type="text" id="campaign_id" name="campaign_id" class="form-control" value="<%= @flow.campaign_id %>">
  </div>

  <div class="form-group">
    <label for="flow_version">
      Flow version
    </label>

    <input type="text" id="flow_version" name="flow_version" class="form-control" value="<%= @flow.flow_version %>">
  </div>

  <div class="form-group">
    <label for="flow_image">
      Flow image
    </label>

    <input type="file" id="flow_image" name="flow_image" class="form-control" value="<%= @flow.flow_image %>">
  </div>

  <div class="form-group">
    <label for="creator_id">
      Creator
    </label>

    <input type="text" id="creator_id" name="creator_id" class="form-control" value="<%= @flow.creator_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update flow
  </button>
</form>

<hr>

<a href="/flows">
  Go back
</a>
