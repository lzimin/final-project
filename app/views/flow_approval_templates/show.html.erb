<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Flow approval #<%= @flow_approval.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/flow_approvals" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/flow_approvals/<%= @flow_approval.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit flow approval
        </a>
      </div>

      <div class="col">
        <a href="/delete_flow_approval/<%= @flow_approval.id %>" class="btn btn-block btn-outline-secondary">
          Delete flow approval
        </a>
      </div>
    </div>

    <dl>
      <dt>
        User
      </dt>
      <dd>
        <%= @flow_approval.user_id %>
      </dd>

      <dt>
        Flow
      </dt>
      <dd>
        <%= @flow_approval.flow_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@flow_approval.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@flow_approval.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

