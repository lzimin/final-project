<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All flow comments
    </h1>

    <a href="/flow_comments/new" class="btn btn-block btn-outline-secondary">
      Add a new flow comment
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Flow
        </th>

        <th>
          Body
        </th>

        <th>
          User
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>

      <% @flow_comments.each do |flow_comment| %>
      <tr>
        <td>
          <%= flow_comment.id %>
        </td>

        <td>
          <%= flow_comment.flow_id %>
        </td>

        <td>
          <%= flow_comment.body %>
        </td>

        <td>
          <%= flow_comment.user_id %>
        </td>

        <td>
          <%= time_ago_in_words(flow_comment.created_at) %> ago
        </td>
        <td>
          <%= time_ago_in_words(flow_comment.updated_at) %> ago
        </td>

        <td>
          <a href="/flow_comments/<%= flow_comment.id %>">
            Show details
          </a>
        </td>
      </tr>
      <% end %>
    </table>
  </div>
</div>
