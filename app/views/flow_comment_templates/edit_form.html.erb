<h1>
  Edit flow comment #<%= @flow_comment.id %>
</h1>

<hr>

<form action="/update_flow_comment/<%= @flow_comment.id %>" method="post">

  <div class="form-group">
    <label for="flow_id">
      Flow
    </label>

    <input type="text" id="flow_id" name="flow_id" class="form-control" value="<%= @flow_comment.flow_id %>">
  </div>

  <div class="form-group">
    <label for="body">
      Body
    </label>

    <textarea id="body" name="body" class="form-control" rows="3"><%= @flow_comment.body %></textarea>
  </div>

  <div class="form-group">
    <label for="user_id">
      User
    </label>

    <input type="text" id="user_id" name="user_id" class="form-control" value="<%= @flow_comment.user_id %>">
  </div>

  <button class="btn btn-block btn-outline-secondary">
    Update flow comment
  </button>
</form>

<hr>

<a href="/flow_comments">
  Go back
</a>
