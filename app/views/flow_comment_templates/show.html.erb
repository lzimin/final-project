<div class="row mb-3">
  <div class="col-md-8 offset-md-2">
    <h1>
      Flow comment #<%= @flow_comment.id %> details
    </h1>

    <div class="row mb-3">
      <div class="col">
        <a href="/flow_comments" class="btn btn-block btn-outline-secondary">
          Go back
        </a>
      </div>

      <div class="col">
        <a href="/flow_comments/<%= @flow_comment.id %>/edit" class="btn btn-block btn-outline-secondary">
          Edit flow comment
        </a>
      </div>

      <div class="col">
        <a href="/delete_flow_comment/<%= @flow_comment.id %>" class="btn btn-block btn-outline-secondary">
          Delete flow comment
        </a>
      </div>
    </div>

    <dl>
      <dt>
        Flow
      </dt>
      <dd>
        <%= @flow_comment.flow_id %>
      </dd>

      <dt>
        Body
      </dt>
      <dd>
        <%= @flow_comment.body %>
      </dd>

      <dt>
        User
      </dt>
      <dd>
        <%= @flow_comment.user_id %>
      </dd>

      <dt>
        Created at
      </dt>
      <dd>
        <%= time_ago_in_words(@flow_comment.created_at) %> ago
      </dd>

      <dt>
        Updated at
      </dt>
      <dd>
        <%= time_ago_in_words(@flow_comment.updated_at) %> ago
      </dd>
    </dl>
  </div>
</div>

