
<h1>
  <%= @user.first_name %> <%= @user.last_name %>
</h1>

<hr>

<dl>
  
  <dt>
    Position
  </dt>
  <dd>
    <%= @user.position %>
  </dd>

  <dt>
    Company
  </dt>
  <dd>
    <%= @user.company.company_name %>
  </dd>

  <dt>
    Email
  </dt>
  <dd>
    <%= @user.email %>
  </dd>
  
  <dt>
    Campaigns
  </dt>
  <dd>
    <% @user.created_campaigns.each do |campaign| %>
      <ul>
        <a href="campaigns/<%= campaign.creator_id %>"><%=campaign.campaign_title%></a>
      </ul>
    <% end %>  
  </dd>
  
</dl>

<a href="/users">
  Go back
</a>