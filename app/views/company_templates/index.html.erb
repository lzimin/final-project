<div class="row mb-3">
  <div class="col-md-12">
    <h1>
      All companies
    </h1>

    <a href="/companies/new" class="btn btn-block btn-outline-secondary">
      Add a new company
    </a>
  </div>
</div>


<hr>

<div class="row mb-3">
  <div class="col-md-12">
    <table class="table">
      <tr>
        <th>
          ID
        </th>

        <th>
          Company name
        </th>
        
        <th>
          Active Campaigns
        </th>
        
        <th>
          Total Campaigns
        </th>

        <th>
          Created at
        </th>

        <th>
          Updated at
        </th>

        <th>
        </th>
      </tr>
      
      <% if current_user.company_id == 1 %>
        <% @companies.each do |company| %>
          <tr>
            <td>
              <%= company.id %>
            </td>
    
            <td>
              <%= company.company_name %>
            </td>
            
            <td>
              <% if company.campaigns.nil? %>
                <a>
                  0
                </a>
              <% else %>  
                <%= company.campaigns.where(:status => "Active").count %>
              <% end %>
            </td>
            
            <td>
              <%= company.campaigns.count %>
            </td>
    
            <td>
              <%= time_ago_in_words(company.created_at) %> ago
            </td>
            
            <td>
              <%= time_ago_in_words(company.updated_at) %> ago
            </td>
    
            <td>
              <a href="/companies/<%= company.id %>">
                Show details
              </a>
            </td>
          </tr>
        <% end %>
        
      <% else %>
        <% @company = Company.find_by(:id => current_user.company_id) %>
        <tr>
          <td>
            <%= @company.id %>
          </td>
  
          <td>
            <%= @company.company_name %>
          </td>
          
          <td>
            <% if @company.campaigns.nil? %>
              <a>
                0
              </a>
            <% else %>  
              <%= @company.campaigns.where(:status => "Active").count %>
            <% end %>
          </td>
          
          <td>
            <% if @company.campaigns.nil? %>
              <a>
                0
              </a>
            <% else %>  
              <%= @company.campaigns.count %>
            <% end %>
          </td>  
          <td>
            <%= time_ago_in_words(@company.created_at) %> ago
          </td>
          
          <td>
            <%= time_ago_in_words(@company.updated_at) %> ago
          </td>
  
          <td>
            <a href="/companies/<%= @company.id %>">
              Show details
            </a>
          </td>
        </tr>
      <% end %>      
      
      
      
    </table>
  </div>
</div>
